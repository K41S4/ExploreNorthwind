@model ExploreNorthwind.Models.CategoryDTO
@{
    ViewData["Title"] = "Upload picture";
}

<div class="p-3">Upload picture for <b>@Model.CategoryName</b> Category</div>
<form action="/Categories/EditPicture" enctype="multipart/form-data" method="post">
    <input hidden asp-for="CategoryID" />
    <input hidden asp-for="CategoryName" />
    <div class="form-group">
        <input type="file" class="form-control" asp-for="Picture" />
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>