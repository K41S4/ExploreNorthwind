@model List<CategoryDTO>
@{
    ViewData["Title"] = "Categories Page";
}

@section Footer {
    <footer class="border-top footer text-muted">
        <div class="container">
            You can't edit categories.
        </div>
    </footer>
}

<h3 class="p-3">Categories list</h3>
<ul class="list-group list-group-ligh">
@foreach (var item in Model)
{
    <li class="list-group-item d-flex justify-content-between align-items-start">
        <div class="ms-2 me-auto">
            <div class="font-weight-bold">@item.CategoryName</div>
            <div>@item.Description</div>
                <div>
                    <northwind-image-link image-id="@item.CategoryID">See picture</northwind-image-link>
                   @* @Html.NorthwindImageLink(item.CategoryID.ToString(), "See picture")*@
                    or
                    <a asp-controller="Categories" asp-action="EditPicture" asp-route-categoryId="@item.CategoryID"><span>Upload a new one</span></a>
                </div>
        </div>
        <span class="badge badge-dark rounded-pill">@item.CategoryID</span>
    </li>
}
</ul>
