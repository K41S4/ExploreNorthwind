@model List<CategoryDTO>
@{
    ViewData["Title"] = "Categories Page";
}

<h3 class="p-3">Categories list</h3>
<ul class="list-group list-group-ligh">
@foreach (var item in Model)
{
    <li class="list-group-item d-flex justify-content-between align-items-start">
        <div class="ms-2 me-auto">
            <div class="font-weight-bold">@item.CategoryName</div>
            @item.Description
        </div>
        <span class="badge badge-dark rounded-pill">@item.CategoryID</span>
    </li>
}
</ul>
