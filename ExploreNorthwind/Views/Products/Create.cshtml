@model ExploreNorthwind.ViewModels.ProductViewModel
@{
    Layout = "_Layout";
}

<h1>Create product</h1>

<fieldset>
    @using (Html.BeginForm())
    {
    <div class="form-group">
        <label asp-for="ProductName">Product name</label>
        <input asp-for="ProductName" type="text" />
    </div>
    <div class="form-group">
        <label asp-for="QuantityPerUnit">Quantity per unit</label>
        <input asp-for="QuantityPerUnit" type="text" />
    </div>
    <div class="form-group">
        <label asp-for="UnitPrice">Unit price</label>
        <input asp-for="UnitPrice" type="text" />
    </div>
    <div class="form-group">
        <label asp-for="UnitsInStock">Units in stock</label>
        <input asp-for="UnitsInStock" type="text" />
    </div>
    <div class="form-group">
        <label asp-for="UnitsOnOrder">Unit in order</label>
        <input asp-for="UnitsOnOrder" type="text" />
    </div>
    <div class="form-group">
        <label asp-for="Discontinued">Discontinued</label>
        <input asp-for="Discontinued" type="checkbox" />
    </div>
    <div class="form-group">
        <label asp-for="CategoryID">Category</label>
        <select asp-for="CategoryID" asp-items="@Model.CategoriesList"></select>
    </div>
    <div class="form-group">
        <label asp-for="SupplierID">Supplier</label>
        <select asp-for="SupplierID" asp-items="@Model.SuppliersList"></select>
    </div>

    <div class="form-group">
        <button type="submit">Submit</button>
    </div>
    }
</fieldset>
