@model ExploreNorthwind.Models.ProductDTO

<fieldset>
    @using (Html.BeginForm())
    {
        <div class="form-group">
            <label asp-for="ProductName">Product name</label>
            <input class="form-control" placeholder="Enter product name" asp-for="ProductName" type="text" value="@Model.ProductName" />
            <div><span asp-validation-for="ProductName" class="text-danger"></span></div>
        </div>
        <div class="form-group">
            <label asp-for="QuantityPerUnit">Quantity per unit</label>
            <input class="form-control" placeholder="Quantity per unit" asp-for="QuantityPerUnit" type="text" value="@Model.QuantityPerUnit" />
        </div>
        <div class="form-group">
            <label asp-for="UnitPrice">Unit price</label>
            <input class="form-control" asp-for="UnitPrice" type="text" value="@Model.UnitPrice.ToString("F")" />
            <div><span asp-validation-for="UnitPrice" class="text-danger"></span></div>
        </div>
        <div class="form-group">
            <label asp-for="UnitsInStock">Units in stock</label>
            <input class="form-control" asp-for="UnitsInStock" type="text" value="@Model.UnitsInStock" />
            <div><span asp-validation-for="UnitsInStock" class="text-danger"></span></div>
        </div>
        <div class="form-group">
            <label asp-for="UnitsOnOrder">Units on order</label>
            <input class="form-control" asp-for="UnitsOnOrder" type="text" value="@Model.UnitsOnOrder" />
            <div><span asp-validation-for="UnitsOnOrder" class="text-danger"></span></div>
        </div>
        <div class="form-group">
            <label asp-for="SupplierID">Supplier</label>
            <select class="form-control" asp-for="SupplierID" asp-items="@Model.SuppliersList"></select>
        </div>
        <div class="form-group">
            <label asp-for="CategoryID">Category</label>
            <select class="form-control" asp-for="CategoryID" asp-items="@Model.CategoriesList"></select>
        </div>
        <div class="form-group form-check">
            <input class="form-check-input" asp-for="Discontinued" type="checkbox" value="@Model.Discontinued" />
            <label class="form-check-label" asp-for="Discontinued">Discontinued</label>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    }
</fieldset>